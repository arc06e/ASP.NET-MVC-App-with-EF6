@model IEnumerable<MyMediaDatabase1.Models.Author>

@{
    ViewBag.Title = "Index";
}

<h2>Authors</h2>

<p>
    @Html.ActionLink("Add Author", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
            
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
            
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Books)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) 
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>

        <td>
            @foreach (var book in item.Books)
            {
                @book.Title  
                @Html.ActionLink("  Details", "Details", new { Controller = "Book", action = "Details", id = book.ID })<br />
            }
        </td>

        <td>
            @Html.ActionLink("Add Book", "Create", new { Controller = "Book", action = "Create", id = item.ID }) |
            @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |

            @Html.ActionLink("Details", "Details", new { id = item.ID }) |

            @Html.ActionLink("Delete", "Delete", new { id = item.ID })
        </td>
    </tr>
}

</table>
